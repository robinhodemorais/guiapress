<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a class="btn btn-success" href="/admin/articles/new"> Criar novo Artigo</a>
    <hr>
    <table class="table">
       <thead>
           <tr>
               <th>ID</th>
               <th>Title</th>
               <th>Slug</th>
               <th>Category</th>
               <th>Ações</th>
           </tr>
       </thead>  
       <tbody>
        <% articles.forEach(article => { %> 
            <tr>
                <th><%= article.id %></th>
                <th><%= article.title %></th>
                <th><%= article.slug %></th>
                <th><%= article.category.title %></th>
                <th>
                    <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-warning">Editar</a>
                    <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmaDelecao(event,this)">
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </th>
            </tr>
           <% }) %> 
       </tbody>
    </table>
</div>
<%- include('../../partials/footer.ejs') %>
<script>
    function confirmaDelecao(event, form){
        //vai impedir o envio do submit do formulario
        event.preventDefault();
        //retorna true ou false
        var decision = confirm('Deseja remover o artigo ?');
        if (decision) {
           form.submit();
        } 
    }
</script>